{
  "name": "@pleme-io/zustand-patterns",
  "version": "1.0.1",
  "description": "Zustand store patterns with immer, persist, devtools, and type-safe modals",
  "type": "module",
  "main": "./dist/index.js",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "types": "./dist/index.d.ts",
      "import": "./dist/index.js"
    },
    "./package.json": "./package.json"
  },
  "sideEffects": false,
  "files": [
    "dist",
    "README.md"
  ],
  "scripts": {
    "build": "tsdown",
    "build:watch": "tsdown --watch",
    "dev": "tsdown --watch",
    "prepare": "npm run build",
    "test": "vitest",
    "test:watch": "vitest --watch",
    "test:coverage": "vitest --coverage",
    "test:ui": "vitest --ui",
    "check": "biome check --diagnostic-level=warn src",
    "check:types": "tsc --noEmit",
    "format": "biome check --write src",
    "clean": "rm -rf dist"
  },
  "peerDependencies": {
    "immer": "^10.0.0",
    "zustand": "^5.0.0"
  },
  "devDependencies": {
    "@vitest/coverage-v8": "^3.2.0",
    "@vitest/ui": "^3.2.0",
    "@biomejs/biome": "^1.9.4",
    "immer": "^10.1.1",
    "jsdom": "^27.0.0",
    "tsdown": "^0.2.0",
    "typescript": "^5.7.0",
    "vite": "^5.0.0",
    "vitest": "^3.2.0",
    "zustand": "^5.0.2"
  },
  "keywords": [
    "zustand",
    "state",
    "store",
    "immer",
    "persist",
    "modal",
    "patterns",
    "typescript",
    "library",
    "nexus",
    "pleme"
  ],
  "repository": {
    "type": "git",
    "url": "https://github.com/pleme-io/pleme-zustand-patterns.git"
  },
  "license": "MIT",
  "author": "Pleme.io Team",
  "module": "./dist/index.js"
}
